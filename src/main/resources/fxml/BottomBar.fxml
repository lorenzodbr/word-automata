        <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="500.0" minWidth="200.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <TextField maxWidth="350.0" prefHeight="40.0" promptText="Insert a word to test it" GridPane.columnIndex="0" />
        <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="70.0" text="Play" GridPane.columnIndex="1" />
        <Button maxHeight="40.0" maxWidth="40.0" minHeight="40.0" minWidth="40.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" text="Reset" GridPane.columnIndex="2" />
