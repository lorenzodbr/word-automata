        <ScrollPane maxWidth="200.0" styleClass="transitionsPanel, mediumGrayBackground" vbarPolicy="NEVER" GridPane.columnIndex="6">
         <content>
            <HBox prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" text="Button" />
                  <Button mnemonicParsing="false" text="Button" />
                  <Button mnemonicParsing="false" text="Button" />
                  <Button mnemonicParsing="false" text="Button" />
                  <Button mnemonicParsing="false" text="Button" />
               </children>
            </HBox>
         </content>
        </ScrollPane>
    </children>
