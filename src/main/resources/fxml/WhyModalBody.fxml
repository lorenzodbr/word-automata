<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<fx:root spacing="15.0" type="VBox" xmlns="http://javafx.com/javafx/21"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<Label text="Constraints">
			<styleClass>
				<String fx:value="title-4" />
				<String fx:value="text-bold" />
			</styleClass>
		</Label>
		<GridPane hgap="12.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
			minWidth="-Infinity" prefWidth="300.0" vgap="10.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints fillWidth="false" hgrow="NEVER" minWidth="-Infinity"
					prefWidth="10.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints vgrow="SOMETIMES" />
				<RowConstraints vgrow="SOMETIMES" />
				<RowConstraints vgrow="SOMETIMES" />
				<RowConstraints vgrow="SOMETIMES" />
				<RowConstraints vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<TextField editable="false" styleClass="rounded-corners"
					text="Consumed the entire word" GridPane.rowIndex="2" />
				<TextField editable="false" styleClass="rounded-corners"
					text="Ended on a final state" GridPane.rowIndex="3" />
				<Circle fx:id="consumedEntireWordIndicator" radius="5.0" GridPane.columnIndex="1"
					GridPane.rowIndex="2" />
				<Circle fx:id="endedOnFinalStateIndicator" radius="5.0" GridPane.columnIndex="1"
					GridPane.rowIndex="3" />
				<TextField editable="false" styleClass="rounded-corners" text="Single initial state" />
				<Circle radius="5.0" styleClass="circle-success" GridPane.columnIndex="1" />
				<TextField editable="false" styleClass="rounded-corners"
					text="At least a final state" GridPane.rowIndex="1" />
				<Circle radius="5.0" styleClass="circle-success" GridPane.columnIndex="1"
					GridPane.rowIndex="1" />
			</children>
		</GridPane>
	</children>
	<padding>
		<Insets left="15.0" right="15.0" top="15.0" />
	</padding>
</fx:root>